<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zestfulYoghurt.zy.mappers.PermissionsMapper">

    <select id="select" parameterType="String"
            resultType="com.zestfulYoghurt.zy.pojos.basePojo.Permissions">

        select * from permissions

        <where>

            <if test="permission_id != null and permission_id.length > 0">

                <foreach collection="permission_id" open=" and id in ( " close=")" item="item" separator=",">

                    #{item}

                </foreach>

            </if>

        </where>

    </select>

</mapper>